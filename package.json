{
  "name": "@mloberg/daft-bot",
  "license": "MIT",
  "homepage": "https://github.com/mloberg/daft-discord-bot",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r dotenv/config dist/index.js",
    "server": "node -r dotenv/config dist/app/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Bot,App\" -c \"cyan.bold,green.bold,yellow.bold\" \"npm run watch:ts\" \"npm run watch:bot\" \"npm run watch:app\"",
    "watch:ts": "tsc -w",
    "watch:bot": "nodemon -w dist --exec \"npm run --silent start\"",
    "watch:app": "nodemon -w dist --exec \"npm run --silent server\"",
    "pretest": "DATABASE_URL=\"postgresql://postgres:secret@127.0.0.1/test\" prisma db push --preview-feature --skip-generate --force",
    "test": "DATABASE_URL=\"postgresql://postgres:secret@127.0.0.1/test\" BOT_TOKEN=test SECRET=xxxxtestingxxsecretxxxx jest --detectOpenHandles --coverage --verbose",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint . --ext .ts --ext .js",
    "format": "npm run lint -- --fix"
  },
  "dependencies": {
    "@discordjs/opus": "^0.4.0",
    "@prisma/client": "^2.15.0",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "nunjucks": "^3.2.2",
    "pino": "^6.11.0",
    "prism-media": "^1.2.3",
    "yargs": "^16.2.0",
    "ytdl-core": "^4.4.5"
  },
  "devDependencies": {
    "@prisma/cli": "^2.15.0",
    "@tsconfig/node14": "^1.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "@types/nunjucks": "^3.1.3",
    "@types/pino": "^6.3.5",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.2",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.3.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  }
}
