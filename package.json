{
  "name": "@mloberg/daft-bot",
  "license": "MIT",
  "homepage": "https://github.com/mloberg/daft-discord-bot",
  "private": true,
  "engines": {
    "node": "^16.0.0",
    "npm": "^7.4.0 || ^8.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest --coverage --verbose",
    "build": "tsc",
    "lint": "eslint --cache .",
    "format": "npm run lint -- --fix",
    "dev": "concurrently npm:watch:*",
    "watch:bot": "nodemon -r dotenv/config dist/index.js | pino-pretty",
    "watch:build": "tsc -w",
    "watch:install": "nodemon -r dotenv/config dist/bin/install.js | pino-pretty",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "@discordjs/builders": "^0.8.1",
    "@discordjs/opus": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@discordjs/voice": "^0.6.0",
    "discord-api-types": "^0.24.0",
    "discord.js": "^13.1.0",
    "dotenv": "^10.0.0",
    "joi": "^17.4.2",
    "lodash": "^4.17.21",
    "pino": "^7.0.5",
    "sodium": "^3.0.2",
    "youtube-dl-exec": "^1.3.2",
    "ytdl-core": "^4.9.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "pino-pretty": "^7.1.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "nodemonConfig": {
    "delay": 2500,
    "runOnChangeOnly": true,
    "watch": [
      "dist/"
    ]
  }
}
