{
  "name": "@mloberg/daft-bot",
  "license": "MIT",
  "homepage": "https://github.com/mloberg/daft-discord-bot",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r dotenv/config dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon -w dist --exec \"npm run --silent start\"",
    "pretest": "rm -f prisma/test.db && DATABASE_URL=\"file:./test.db\" prisma --experimental migrate up --create-db --auto-approve",
    "test": "DATABASE_URL=\"file:./test.db\" BOT_TOKEN=test jest --detectOpenHandles --coverage --verbose",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint . --ext .ts --ext .js",
    "fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.2",
    "@prisma/client": "^2.7.1",
    "discord.js": "^12.3.1",
    "dotenv": "^8.2.0",
    "joi": "^17.2.1",
    "pino": "^6.6.1",
    "yargs": "^16.0.3",
    "ytdl-core-discord": "^1.2.2"
  },
  "devDependencies": {
    "@prisma/cli": "^2.7.1",
    "@tsconfig/node12": "^1.0.7",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/pino": "^6.3.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.2.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.3"
  }
}
